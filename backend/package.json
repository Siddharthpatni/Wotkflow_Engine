{
  "name": "workflow-engine-backend",
  "version": "1.0.0",
  "description": "Production-grade workflow automation engine",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prod": "NODE_ENV=production node src/index.js",
    "worker": "node src/queue/worker.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t workflow-engine .",
    "docker:run": "docker run -p 3001:3001 workflow-engine"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "ws": "^8.14.2",
    "bull": "^4.11.4",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "knex": "^3.0.1",
    "uuid": "^9.0.1",
    "axios": "^1.5.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "vm2": "^3.9.19",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "pino-http": "^8.5.1",
    "node-cron": "^3.0.3",
    "prometheus-api-metrics": "^3.2.2",
    "express-prometheus-middleware": "^1.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "workflow",
    "automation",
    "orchestration",
    "nodejs",
    "redis",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/workflow-engine.git"
  }
}
